<COMPONENT>
  <HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.102" STATUS="ALPHA"
    COMPATIBILITY="ALL" AUTHOR="Camptocamp" RELEASE_DATE="20080321"
    STARTABLE="true" DATA_AUTO_PROPAGATE="false"
    SCHEMA_AUTO_PROPAGATE="true">
    <SIGNATURE />
  </HEADER>
  <FAMILIES>
    <FAMILY>Geo/File/Input</FAMILY>
  </FAMILIES>
  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>
  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK" />
    <CONNECTOR CTYPE="COMPONENT_ERROR" />
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="RUN_IF" />
  </CONNECTORS>
  <PARAMETERS>
    <PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true"
      NUM_ROW="1" REPOSITORY_VALUE="DELIMITED" />
    <PARAMETER NAME="FORMAT_TYPE" FIELD="TEXT" NUM_ROW="2" SHOW="false"
      REQUIRED="true">
      <DEFAULT>EDIGEO</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="FILENAME" FIELD="FILE" NUM_ROW="3" REQUIRED="true"
      REPOSITORY_VALUE="FILE_PATH">
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/in.thf"</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="EDIGEO_OBJ" FIELD="TEXT" NUM_ROW="4"
      REQUIRED="true" REPOSITORY_VALUE="EDIGEO_OBJ">
    </PARAMETER>
    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
      NUM_ROW="5">
      <TABLE>
        <COLUMN NAME="the_geom" TYPE="id_Geometry" CUSTOM="false"
          READONLY="false" />
      </TABLE>
    </PARAMETER>
  </PARAMETERS>
  <ADVANCED_PARAMETERS>
	<PARAMETER NAME="IMPORT" FIELD="MEMO_IMPORT" REQUIRED="false" SHOW="false" NUM_ROW="1">
	  <DEFAULT>import org.talend.sdi.geometry.Geometry;</DEFAULT>
	</PARAMETER>   
  </ADVANCED_PARAMETERS>
  <CODEGENERATION>
    <TEMPLATES INPUT="PG" OUTPUT="DI">
      <TEMPLATE NAME="PG" COMPONENT="sGeoInput">
        <LINK_TO NAME="DI" CTYPE="FLOW" />
      </TEMPLATE>
      <TEMPLATE NAME="DI" COMPONENT="sFlowForwarder" />
      <TEMPLATE_PARAM SOURCE="self.PROPERTY" TARGET="PG.PROPERTY" />
      <TEMPLATE_PARAM SOURCE="self.FORMAT_TYPE" TARGET="PG.FORMAT_TYPE" />
      <TEMPLATE_PARAM SOURCE="self.FILENAME" TARGET="GI.FILENAME" />
      <TEMPLATE_PARAM SOURCE="self.EDIGEO_OBJ" TARGET="GI.EDIGEO_OBJ" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="PG.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="DI.SCHEMA" />
    </TEMPLATES>
  </CODEGENERATION>
  <RETURNS>
    <RETURN NAME="NB_FEATURE" TYPE="id_Integer" AVAILABILITY="AFTER" />
  </RETURNS>
</COMPONENT>
