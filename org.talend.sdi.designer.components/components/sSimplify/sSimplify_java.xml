<COMPONENT>
  <HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.101" STATUS="ALPHA"
    COMPATIBILITY="ALL" AUTHOR="Camptocamp" RELEASE_DATE="20071207"
    STARTABLE="false" SCHEMA_AUTO_PROPAGATE="true"
    DATA_AUTO_PROPAGATE="false">
    <SIGNATURE />
  </HEADER>
  <FAMILIES>
    <FAMILY>Geo/Manipulators</FAMILY>
  </FAMILIES>
  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>
  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
    <CONNECTOR CTYPE="COMPONENT_OK" />
    <CONNECTOR CTYPE="COMPONENT_ERROR" />
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="RUN_IF" />
  </CONNECTORS>
  <PARAMETERS>
    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
      NUM_ROW="1" SHOW="false">
    </PARAMETER>
    <PARAMETER NAME="OPERATION_TYPE" FIELD="CLOSED_LIST" REQUIRED="true"
      NUM_ROW="2">
      <ITEMS DEFAULT="DOUGLAS_PEUCKER">
        <ITEM NAME="DOUGLAS_PEUCKER" VALUE="DOUGLAS_PEUCKER" />
        <ITEM NAME="TOPOLOGY_PRESERVING" VALUE="TOPOLOGY_PRESERVING" />
      </ITEMS>
    </PARAMETER>
    <PARAMETER NAME="TOLERANCE" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="2">
      <DEFAULT>0.1</DEFAULT>
    </PARAMETER>
  </PARAMETERS>
  <CODEGENERATION>
    <TEMPLATES INPUT="BO" OUTPUT="FF">
      <TEMPLATE NAME="BO" COMPONENT="sGeoBasicOperation">
        <LINK_TO NAME="FF" CTYPE="FLOW" />
      </TEMPLATE>
      <TEMPLATE NAME="FF" COMPONENT="sFlowForwarder" />
      <TEMPLATE_PARAM SOURCE="self.OPERATION_TYPE"
        TARGET="BO.OPERATION_TYPE" />
      <TEMPLATE_PARAM SOURCE="self.TOLERANCE" TARGET="BO.TOLERANCE" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="BO.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="FF.SCHEMA" />
    </TEMPLATES>
  </CODEGENERATION>
  <RETURNS>
    <RETURN NAME="NB_FEATURE" TYPE="INTEGER" AVAILABILITY="AFTER" />
  </RETURNS>
</COMPONENT>
