<COMPONENT>
  <HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.101" STATUS="ALPHA"
    COMPATIBILITY="ALL" AUTHOR="Camptocamp" RELEASE_DATE="20071226"
    STARTABLE="false" DATA_AUTO_PROPAGATE="false"
    SCHEMA_AUTO_PROPAGATE="false">
    <SIGNATURE />
  </HEADER>
  <FAMILIES>
    <FAMILY>Geo/Geocoding</FAMILY>
  </FAMILIES>
  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>
  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
    <CONNECTOR CTYPE="COMPONENT_OK" />
    <CONNECTOR CTYPE="COMPONENT_ERROR" />
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="RUN_IF" />
  </CONNECTORS>
  <PARAMETERS>
    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
      NUM_ROW="1">
      <TABLE>
        <COLUMN NAME="geonameid" TYPE="id_String" CUSTOM="true" />
        <COLUMN NAME="name" TYPE="id_String" CUSTOM="true" />
        <COLUMN NAME="countrycode" TYPE="id_String" CUSTOM="true" />
        <COLUMN NAME="countryname" TYPE="id_String" CUSTOM="true" />
        <COLUMN NAME="lat" TYPE="id_Double" CUSTOM="true" />
        <COLUMN NAME="lng" TYPE="id_Double" CUSTOM="true" />
        <COLUMN NAME="fcl" TYPE="id_String" CUSTOM="true" />
        <COLUMN NAME="fcode" TYPE="id_String" CUSTOM="true" />
        <COLUMN NAME="distance" TYPE="id_Double" CUSTOM="true" />
      </TABLE>
    </PARAMETER>
    <PARAMETER NAME="WS" FIELD="TEXT" REQUIRED="true" NUM_ROW="2"
      SHOW="false">
      <DEFAULT>
        "http://ws.geonames.org/findNearbyPlaceName?lat={LATITUDE}&amp;lng={LONGITUDE}&amp;country={COUNTRY}&amp;maxRows=1&amp;"
      </DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="COUNTRY" FIELD="TEXT" REQUIRED="false"
      NUM_ROW="2">
      <DEFAULT></DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="X" FIELD="PREV_COLUMN_LIST" REQUIRED="true"
      NUM_ROW="3" />
    <PARAMETER NAME="Y" FIELD="PREV_COLUMN_LIST" REQUIRED="true"
      NUM_ROW="3" />
    <PARAMETER NAME="OPERATION_TYPE" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="2" SHOW="false">
      <DEFAULT>FIND_PLACE_NAME</DEFAULT>
    </PARAMETER>
  </PARAMETERS>
  <CODEGENERATION>
    <TEMPLATES INPUT="BO" OUTPUT="FF">
      <TEMPLATE NAME="BO" COMPONENT="sGeoNames">
        <LINK_TO NAME="FF" CTYPE="FLOW" />
      </TEMPLATE>
      <TEMPLATE NAME="FF" COMPONENT="sFlowForwarder" />
      <TEMPLATE_PARAM SOURCE="self.OPERATION_TYPE"
        TARGET="BO.OPERATION_TYPE" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="BO.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.WS" TARGET="BO.WS" />
      <TEMPLATE_PARAM SOURCE="self.X" TARGET="BO.X" />
      <TEMPLATE_PARAM SOURCE="self.Y" TARGET="BO.Y" />
      <TEMPLATE_PARAM SOURCE="self.COUNTRY" TARGET="BO.COUNTRY" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="FF.SCHEMA" />
    </TEMPLATES>
  </CODEGENERATION>
  <RETURNS>
    <RETURN NAME="NB_FEATURE" TYPE="INTEGER" AVAILABILITY="AFTER" />
  </RETURNS>
</COMPONENT>
