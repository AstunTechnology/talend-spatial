<COMPONENT>
  <HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.101" STATUS="ALPHA"
    COMPATIBILITY="ALL" AUTHOR="Camptocamp" RELEASE_DATE="20070919"
    STARTABLE="false" DATA_AUTO_PROPAGATE="false"
    SCHEMA_AUTO_PROPAGATE="true">
    <SIGNATURE></SIGNATURE>
  </HEADER>
  <FAMILIES>
    <FAMILY>Geo/Manipulators</FAMILY>
  </FAMILIES>
  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>
  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_OUTPUT="1" MAX_INPUT="1" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
    <CONNECTOR CTYPE="COMPONENT_OK" />
    <CONNECTOR CTYPE="COMPONENT_ERROR" />
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="RUN_IF" />
  </CONNECTORS>
  <PARAMETERS>
    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
      NUM_ROW="1">
    </PARAMETER>
    <PARAMETER NAME="BUFFER_DISTANCE" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="2">
      <DEFAULT>10</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="BUFFER_END_CAP_STYLE" FIELD="CLOSED_LIST"
      REQUIRED="true" NUM_ROW="3">
      <ITEMS DEFAULT="CAP_ROUND">
        <ITEM NAME="CAP_ROUND" VALUE="CAP_ROUND" />
        <ITEM NAME="CAP_BUTT" VALUE="CAP_BUTT" />
        <ITEM NAME="CAP_SQUARE" VALUE="CAP_SQUARE" />
      </ITEMS>
    </PARAMETER>
    <PARAMETER NAME="BUFFER_QUANTIZATION" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="4">
      <DEFAULT>8</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="OPERATION_TYPE" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="5" SHOW="false">
      <DEFAULT>BUFFER</DEFAULT>
    </PARAMETER>
  </PARAMETERS>
  <ADVANCED_PARAMETERS>
	<PARAMETER NAME="IMPORT" FIELD="MEMO_IMPORT" REQUIRED="false" SHOW="false" NUM_ROW="1">
	  <DEFAULT>import org.talend.sdi.geometry.Geometry;</DEFAULT>
	</PARAMETER>   
  </ADVANCED_PARAMETERS>  
  <CODEGENERATION>
    <TEMPLATES INPUT="BO" OUTPUT="FF">
      <TEMPLATE NAME="BO" COMPONENT="sGeoBasicOperation">
        <LINK_TO NAME="FF" CTYPE="FLOW" />
      </TEMPLATE>
      <TEMPLATE NAME="FF" COMPONENT="sFlowForwarder" />
      <TEMPLATE_PARAM SOURCE="self.OPERATION_TYPE"
        TARGET="BO.OPERATION_TYPE" />
      <TEMPLATE_PARAM SOURCE="self.BUFFER_DISTANCE"
        TARGET="BO.BUFFER_DISTANCE" />
      <TEMPLATE_PARAM SOURCE="self.BUFFER_END_CAP_STYLE"
        TARGET="BO.BUFFER_END_CAP_STYLE" />
      <TEMPLATE_PARAM SOURCE="self.BUFFER_QUANTIZATION"
        TARGET="BO.BUFFER_QUANTIZATION" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="BO.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="FF.SCHEMA" />
    </TEMPLATES>
  </CODEGENERATION>
  <RETURNS>
    <RETURN NAME="NB_FEATURE" TYPE="INTEGER" AVAILABILITY="AFTER" />
  </RETURNS>
</COMPONENT>
