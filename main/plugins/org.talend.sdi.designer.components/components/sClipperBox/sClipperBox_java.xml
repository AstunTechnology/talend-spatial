<COMPONENT>
  <HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.101" STATUS="ALPHA"
    COMPATIBILITY="ALL" AUTHOR="Camptocamp" RELEASE_DATE="20071207"
    STARTABLE="false" DATA_AUTO_PROPAGATE="false"
    SCHEMA_AUTO_PROPAGATE="true">
    <SIGNATURE></SIGNATURE>
  </HEADER>
  <FAMILIES>
    <FAMILY>Geo/Geometric Operators</FAMILY>
  </FAMILIES>
  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>
  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_OUTPUT="1" MAX_INPUT="1" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
    <CONNECTOR CTYPE="COMPONENT_OK" />
    <CONNECTOR CTYPE="COMPONENT_ERROR" />
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="RUN_IF" />
  </CONNECTORS>
  <PARAMETERS>
    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
      NUM_ROW="1">
    </PARAMETER>
    <PARAMETER NAME="CLIPPER_XMIN" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="2">
      <DEFAULT>-180</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="CLIPPER_YMIN" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="2">
      <DEFAULT>-90</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="CLIPPER_XMAX" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="3">
      <DEFAULT>180</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="CLIPPER_YMAX" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="3">
      <DEFAULT>90</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="OPERATION_TYPE" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="3" SHOW="false">
      <DEFAULT>CLIPPER</DEFAULT>
    </PARAMETER>
  </PARAMETERS>
  <ADVANCED_PARAMETERS>
	<PARAMETER NAME="IMPORT" FIELD="MEMO_IMPORT" REQUIRED="false" SHOW="false" NUM_ROW="1">
	  <DEFAULT>import org.talend.sdi.geometry.Geometry;</DEFAULT>
	</PARAMETER>   
  </ADVANCED_PARAMETERS>
  <CODEGENERATION>
    <TEMPLATES INPUT="BO" OUTPUT="FF">
      <TEMPLATE NAME="BO" COMPONENT="sGeoBasicOperation">
        <LINK_TO NAME="FF" CTYPE="FLOW" />
      </TEMPLATE>
      <TEMPLATE NAME="FF" COMPONENT="sFlowForwarder" />
      <TEMPLATE_PARAM SOURCE="self.OPERATION_TYPE"
        TARGET="BO.OPERATION_TYPE" />
      <TEMPLATE_PARAM SOURCE="self.CLIPPER_XMIN"
        TARGET="BO.CLIPPER_XMIN" />
      <TEMPLATE_PARAM SOURCE="self.CLIPPER_YMIN"
        TARGET="BO.CLIPPER_YMIN" />
      <TEMPLATE_PARAM SOURCE="self.CLIPPER_XMAX"
        TARGET="BO.CLIPPER_XMAX" />
      <TEMPLATE_PARAM SOURCE="self.CLIPPER_YMAX"
        TARGET="BO.CLIPPER_YMAX" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="BO.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="FF.SCHEMA" />
    </TEMPLATES>
  </CODEGENERATION>
  <RETURNS>
    <RETURN NAME="NB_FEATURE" TYPE="INTEGER" AVAILABILITY="AFTER" />
  </RETURNS>
</COMPONENT>
